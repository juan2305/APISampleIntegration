<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APISampleIntegration.Views.FlightPage"
             xmlns:viewModel="clr-namespace:APISampleIntegration.ViewModels">
    <ContentPage.BindingContext>
        <viewModel:FlightViewModel />
    </ContentPage.BindingContext>
    <StackLayout>
        <Entry Text="{Binding AirlineCode}"/>
        <Button Text="Find" Clicked="Button_Clicked"></Button>
        <ListView x:Name="FlightList">
                  <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Origin}" Detail="{Binding Destination}"/>
            </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout> 
</ContentPage>